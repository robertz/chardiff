<h4>Character Info</h4>
<table class="table">
  <tr>
    <td width="40%">Name</td>
    <td>{{ cdata.name }}</td>
  </tr>
  <tr>
    <td>Class</td>
    <td>{{ cdata.class }}</td>
  </tr>
  <tr>
    <td>Level</td>
    <td>{{ cdata.level }}</td>
  </tr>
  <tr>
    <td>Paragon Level</td>
    <td>{{ cdata.paragonLevel }}</td>
  </tr>
</table>

<h4>Character Stats</h4>
<table class="table">
  {{#each cdata.stats}}
  <tr>
    <td width="40%">{{@key}}</td>
    <td>{{ this }}</td>
  </tr>
  {{/each}}
</table>

