<h4>Items</h4>
<table class="table">
  <thead>
    <tr>
      <th>Slot</th>
      <th>Item</th>
    </tr>
  </thead>


  {{#each cdata.items}}
    {{#if this.name}}
      <tr>
        <td>
          {{@key}}
        </td>
        <td>
          <span class="item {{this.displayColor}} pull-left"><img src="//media.blizzard.com/d3/icons/items/large/{{{this.icon}}}.png" /></span>
          <span class="text {{this.displayColor}}" data-itemid="{{this.id}}">{{this.name}}</span><br />
        </td>
      </tr>
    {{/if}}
  {{/each}}
</table>

<script type="text/javascript">
  $(document).ready(function(){
    $('.po')
    .on('click', function(event){
      event.preventDefault();
    })
    .popover({
      placement: 'top'
    });
  });
</script>
