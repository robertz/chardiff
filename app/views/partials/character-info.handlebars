<h4>Items</h4>
<table class="table equipment">
  <thead>
    <tr>
      <th>Slot</th>
      <th>Item</th>
    </tr>
  </thead>
  {{#each cdata.items}}
    <tr>
      <td>
        {{@key}}
      </td>
      <td>
        {{#if this.name}}
          <span class="item {{this.displayColor}} pull-left"><img src="//media.blizzard.com/d3/icons/items/large/{{{this.icon}}}.png" /></span>
          <span class="text"><a href="http://us.battle.net/d3/en/item/{{this.slug}}" class="{{this.displayColor}}" title="{{this.name}}">{{this.name}}</a></span><br />
        {{else}}
          <div class="placeholder"></div>
        {{/if}}
      </td>
    </tr>
  {{/each}}
</table>


